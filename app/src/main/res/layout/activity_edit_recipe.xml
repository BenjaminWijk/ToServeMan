<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="model"
            type="com.benjaminwijk.toserveman.viewmodels.EditRecipeModel" />
    </data>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:padding="5dp"
        android:rowCount="5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_recipe_name_hint"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:text="@={model.name}"
            android:inputType="text"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_recipe_description"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="3"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:importantForAutofill="no"
            android:text="@={model.description}"
            android:inputType="text"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_columnWeight="3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_recipe_clear"
            android:onClick="@{() -> model.clear()}"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnWeight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_recipe_save"
            android:onClick="onSaveRecipe"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnWeight="1"
            />

    </GridLayout>
</layout>